{# On charge le formulaire #}
{{ form_start(form, {attr: {class: 'filter js-filter-form'}} ) }}

<div class="spinner-border js-loading" role="status" aria-hidden="true" style="display: none">
    <span class="sr-only">Chargement...</span>
</div>

{{ form_row(form.q) }}

<h4>Genres</h4>
{{ form_row(form.genres) }}

<h4>Plateformes</h4>
{{ form_row(form.platforms) }}

<h4>Concepteur</h4>
{{ form_row(form.conceptor) }}

<h4>Categorie</h4>
{{ form_row(form.category) }}


<h4>Prix</h4>
<div class="row">
    <div class="col-md-6">
        {{ form_row(form.min)}}
    </div>
     <div class="col-md-6">
        {{ form_row(form.max)}}
    </div>
</div>
<div id="price-slider" data-min="{{ min }}" data-max="{{ max }}"></div>



<div style="display: none;"><h4>Occasion</h4>
{{ form_row(form.new)}}
</div>

<button type="submit" class=" btn btn-danger">Filtrer</button>
{{ form_end(form)}}