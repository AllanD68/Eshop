	<div class="login__container">
		<div class="container__child signup__thumbnail">
			<div class="thumbnail__content text-center" style="margin: 0 0 auto;">
				<h1 class="heading--primary">Heureux de vous revoir !</h1>
				<h2 class="heading--secondary">Notre site n'est pas pareil sans vous!</h2>
			</div>
		</div>
		<div class="container__child signup__form" style=" text-align: center; padding: 7em;">
			<form action="{{ path('security_login') }}" method="POST">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security', 'fr') }}</div>
				{% endif %}
				<h3>Adresse email</h3>


				<div class="form-groupe">

					<input placeholder="Adresse email..." required name="_username" type="email" class="form-control form-input">
					<br></div>

				<h3>Mot de passe</h3>
				<div class="form-groupe">
					<input id="password" placeholder="Mot de passe..." required name="_password" type="password" class="form-control form-input">
					<div style="display:flex;">  <label for="checkbox">
					<input type="checkbox" id="checkbox"> Afficher le mot de passe
   					</label> </div>
					<br></div>

				<input type="checkbox" id="remember_me" name="_remember_me" checked/>
				<label for="remember_me">Se souvenir de moi</label>

				<div class="form-groupe">
					<button type="submit" class="btn--form-registration" style=" margin-bottom: 2em;margin-top: 2em;">Connexion !</button>
				</div>
				<div class="form-groupe" style="display: flex; justify-content: space-evenly;">
					<a class="signup__link" href="{{ path('security_registration') }}">Nouveau sur le site ?</a>
					<a class="signup__link" href="{{ path('forgotten_password') }}">Mot de passe oublié?</a>
				</div>
			</form>
		</div>
	</div>
</div>

